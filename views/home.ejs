<!DOCTYPE html>
<html>
  
<head>
    <title>Notes application</title>
</head>
  
<body style=" margin:0; background-color: rgb(247, 223, 223); color: #333; font:100% / normal sans-serif;">
    <main style="margin: 0 auto; padding: 4rem 0; width: 90%; max-width: 60rem;">
    <h1>My Notes</h1>
  
    <div style="display: flex;">
  
        <% data.forEach(element=> { %>
  
            <form action="/update" method="post" style=" box-sizing: border-box;
            padding: 2rem;
            border-radius: 1rem;
            background-color: hsl(0, 0%,100%);
            border: 4px solid hsl(0, 0%,90%);
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;">
                <input type="number" style="display: none;" 
                       name="noteId" value="<%= element.noteId %>">
                <textarea style="grid-column: span 2;" type="text" rows="6" cols="30" 
                          placeholder="Type Here..." name="noteContent"
                    value="<%= element.noteContent %>">
                      <%= element.noteContent %></textarea>
                <br>
                <button type="submit">Update</button>
            </form>
  
            <form action="/delete" method="post">
                <input type="number" style="display: none;" 
                       name="noteId" value="<%= element.noteId %>">
                <button type="submit" 
                        style="margin: 0px 4px;">âœ•</button>
            </form>
            <% }) %>
    </div>
    <br><br><br><br><br>

    <h3>Add Note</h3>
    <form action="/" method="post">
        <input type="number"  style="display: none;"
               name="noteId">
        <textarea type="text" rows="6" cols="30" 
                  placeholder="Type Here..." 
                  name="noteContent"></textarea>
        <br>
        <button type="submit">Add</button>
    </form>
</main>
</body>
  
</html>